{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "paths" : {
            "src/*": ["./src/*"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            }
        ]
    },
    "lib": [
        "es2015"
    ],
    "exclude": [
        "node_modules"
    ]
}